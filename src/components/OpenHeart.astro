---
// OpenHeart.astro
interface Props {
  permalink: string;
  emoji?: string;
}

const { permalink, emoji = "❤️" } = Astro.props;
const workerUrl = `https://worker-test.josieblog.workers.dev/${permalink}`;
---

<open-heart href={workerUrl} emoji={emoji}>{emoji}</open-heart>

<script>
  // Import our custom web component
  import "./open-heart-element.js";

  // Initialize components when defined
  window.customElements.whenDefined('open-heart').then(() => {
    document.querySelectorAll('open-heart').forEach(heart => {
      if ('getCount' in heart) {
        (heart as any).getCount();
      }
    });
  });

  // Refresh component after click
  window.addEventListener('open-heart', (e) => {
    const target = e.target as any;
    if (target?.getCount) {
      target.getCount();
    }
  });
</script>

<style>
  open-heart {
    margin: var(--card-padding);
    margin-top: 0;
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: fit-content;
    border: 1px solid #FFA7B6;
    border-radius: 0.4em;
    padding: 0.4em;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  open-heart:not([disabled]):hover,
  open-heart:not([disabled]):focus {
    border-color: var(--accent-color);
    transform: scale(1.05);
  }

  open-heart[disabled] {
    background: #FFA7B6;
    border: 1px solid #FFA7B6;
    cursor: not-allowed;
    color: #fff;
    opacity: 0.7;
  }

  open-heart[clicked] {
    animation: pulse 0.3s ease-in-out;
  }

  open-heart[count]:not([count="0"])::after {
    content: " " attr(count);
    font-size: 0.9em;
    padding-left: 0.4em;
    color: #666;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }
</style>