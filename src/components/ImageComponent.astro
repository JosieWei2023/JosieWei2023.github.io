---
const { src, alt } = Astro.props;
---
<div>
    <div class="image-container">
     <img src={src} alt={alt} />
    </div>
    <p class="image-alt">{alt}</p>
</div>
<style>
.image-container {
  max-width: 100%;
  margin: 0 auto;
  text-align: center;
}

.image-container img {
  max-width: 100%;
  height: auto;
  display: block; 
  margin: 0 auto; 
}

.image-alt {
  margin-top: 8px;
  font-size: 14px;
  color: #666;
  text-align: center; 
}
</style>
